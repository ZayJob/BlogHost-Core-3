@model IEnumerable<BlogHost.Data.Models.Publication>
@{
    ViewData["Title"] = "AllPosts";
}

<h1 class="text-center">AllPosts</h1>
@foreach(var post in Model)
{
    <div class="container">
        <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
            <div class="col-md-6 px-0">
                <h1 class="display-4 font-italic">@post.PublicationName</h1>
                <p class="lead my-3">@post.Discription</p>
                <p class="lead my-3">@post.DatePublication</p>
                <p class="lead mb-0"><a class="text-white font-weight-bold" asp-controller="" asp-action="">Continue reading...</a></p>
            </div>
        </div>
    </div>
}
