@model BlogHost.ViewModels.CreatePublicationViewModel

@{
    ViewData["Title"] = "CreatePost";
}

<div class="text-center container col-4">
    <h1>Create post</h1>
    <form method="post" asp-controller="Publication" asp-action="CreatePost">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="PublicationName"></label><br />
            <input asp-for="PublicationName" />
            <span asp-validation-for="PublicationName"></span>
        </div>
        <div>
            <label asp-for="Discription"></label><br />
            <input asp-for="Discription" />
            <span asp-validation-for="Discription"></span>
        </div>
        <div>
            <label asp-for="PublicationText"></label><br />
            <input asp-for="PublicationText" />
            <span asp-validation-for="PublicationText"></span>
        </div>
        <div>
            <label asp-for="ImgUrlPublication"></label><br />
            <input asp-for="ImgUrlPublication" />
            <span asp-validation-for="ImgUrlPublication"></span>
        </div>
        <div>
            <label asp-for="isFavorite"></label><br />
            <input asp-for="isFavorite" />
        </div>
        <select asp-for="TopicName" size="1">
            <option value="1">World</option>
            <option selected="selected" value="2">U.S</option>
            <option value="3">Technology</option>
            <option value="4">Design</option>
            <option value="5">Culture</option>
            <option value="6">Business</option>
            <option value="7">Politics</option>
            <option value="8">Opinion</option>
            <option value="9">Science</option>
            <option value="10">Health</option>
            <option value="11">Style</option>
            <option value="12">Travel</option>
        </select>
        <div class="">
            <input class="btn btn-sm btn-primary btn-block" type="submit" value="Создать" />
        </div>
    </form>
</div>
