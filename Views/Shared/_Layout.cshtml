<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogHost</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="text-muted" asp-controller="Users" asp-action="Profile">Profile</a>
                        <a class="text-muted" asp-controller="Publication" asp-action="MyPosts">My posts</a>
                        <a class="text-muted" asp-controller="Publication" asp-action="AllPosts">All posts</a>
                        <a class="text-muted" asp-controller="Publication" asp-action="CreatePost">Create posts</a>
                        <a class="text-muted" asp-controller="Chat" asp-action="Chat">Chat</a>


                        if (User.IsInRole("admin") || User.IsInRole("moder"))
                        {
                            <a class="text-muted" asp-controller="Roles" asp-action="AdminPanel">AP</a>
                        }
                    }
                    else
                    {
                        <a class="text-muted" asp-controller="Account" asp-action="Register">Profile</a>
                        <a class="text-muted" asp-controller="Account" asp-action="Register">My posts</a>
                        <a class="text-muted" asp-controller="Account" asp-action="Register">All posts</a>
                        <a class="text-muted" asp-controller="Account" asp-action="Register">Create posts</a>
                        <a class="text-muted" asp-controller="Account" asp-action="Register">Chat</a>
                    }
                </div>
                <div class="col-4 text-center">
                    <h3><a class="blog-header-logo text-dark" asp-controller="Home" asp-action="Index">BlogHost</a></h3>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="text-muted" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24" focusable="false"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>
                    </a>
                    <div>
                        @if (User.Identity.IsAuthenticated)
                        {

                            <p>@User.Identity.Name</p>
                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Account" asp-action="LogOff">LogOff</a>

                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Account" asp-action="Login">Sign in</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Account" asp-action="Register">Sign up</a>
                        }
                    </div>
                </div>
            </div>
        </header>
        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                @if (User.Identity.IsAuthenticated)
                {

                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="World">World</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="U.S.">U.S.</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Technology">Technology</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Design">Design</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Culture">Culture</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Business">Business</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Politics">Politics</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Opinion">Opinion</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Science">Science</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Health">Health</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Style">Style</a>
                    <a class="p-2 text-muted" asp-controller="Publication" asp-action="ThemsPost" asp-route-nameTopic="Travel">Travel</a>

                }
                else
                {
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="World">World</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="U.S.">U.S.</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Technology">Technology</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Design">Design</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Culture">Culture</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Business">Business</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Politics">Politics</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Opinion">Opinion</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Science">Science</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Health">Health</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Style">Style</a>
                    <a class="p-2 text-muted" asp-controller="Account" asp-action="Register" asp-route-nameTopic="Travel">Travel</a>
                }
            </nav>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - BlogHost - <vk></vk> - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
