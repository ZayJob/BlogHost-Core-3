@model IEnumerable<BlogHost.Data.Models.Publication>

@{
    ViewData["Title"] = "Home Page";
}

    <div class="container">
        <div class="card bg-dark text-white">
            <img style="height:300px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ToList()[0].AvatarPost))" alt="" class="card-img" />
            <div class="card-img-overlay">
                <h5 class="card-title">@Model.ToList()[0].PublicationName</h5>
                <p class="card-text">@Model.ToList()[0].Discription</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <p class="card-text"><a class="text-white font-weight-bold" asp-controller="Publication" asp-action="Post" asp-route-id="@Model.ToList()[0].Id">Continue reading...</a></p>
                }
            </div>
        </div><br />
        <div class="row mb-2">
            <div class="col-md-6">
                <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                    <div class="col p-4 d-flex flex-column position-static">
                        <h3 class="mb-0">@Model.ToList()[1].PublicationName</h3>
                        <div class="mb-1 text-muted">@Model.ToList()[1].DatePublication</div>
                        <p class="card-text mb-auto">@Model.ToList()[1].Discription</p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Publication" asp-action="Post" asp-route-id="@Model.ToList()[1].Id" class="stretched-link">Continue reading</a>
                        }
                    </div>
                    <div class="col-auto d-none d-lg-block">
                        <img style='width:200px; height:200px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.ToList()[1].AvatarPost))" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row no-gutters border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                    <div class="col p-4 d-flex flex-column position-static">
                        <h3 class="mb-0">@Model.ToList()[2].PublicationName</h3>
                        <div class="mb-1 text-muted">@Model.ToList()[2].DatePublication</div>
                        <p class="mb-auto">@Model.ToList()[2].Discription</p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Publication" asp-action="Post" asp-route-id="@Model.ToList()[2].Id" class="stretched-link">Continue reading</a>
                        }
                    </div>
                    <div class="col-auto d-none d-lg-block">
                        <img style='width:200px; height:200px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(@Model.ToList()[2].AvatarPost))" />
                    </div>
                </div>
            </div>
        </div>
    </div>
